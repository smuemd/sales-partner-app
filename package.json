{
  "name": "sales-partner-app",
  "description": "A web application to manage sales commissions the STROMDAO Energy Blockchain.",
  "version": "0.1.0",
  "author": "smuemd",
  "license": "MIT",
  "ava": {
    "require": [
      "babel-register"
    ],
    "verbose": "true"
  },
  "babel": {
    "env": {
      "test": {
        "sourceMaps": "inline",
        "plugins": [
          "syntax-dynamic-import"
        ],
        "presets": [
          "@ava/stage-4",
          "env"
        ]
      }
    }
  },
  "bugs": "https://github.com/energychain/sales-partner-app/issues",
  "dependencies": {
    "mithril": "^1.1.3",
    "reshape-standard": "^3.1.0",
    "spike": "^2.2.0",
    "spike-css-standards": "^3.0.0",
    "spike-js-standards": "^2.0.2",
    "spike-optimize": "^0.1.2",
    "spike-page-id": "^1.0.0",
    "suitcss-base": "^3.0.0",
    "suitcss-utils": "^3.0.0",
    "snyk": "^1.40.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "coveralls": "^2.13.1",
    "prettier-standard": "^6.0.0",
    "rimraf": "^2.6.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "nyc": "^11.1.0"
  },
  "optionalDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3"
  },
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.8.0"
  },
  "homepage": "https://github.com/energychain/sales-partner-app",
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "main": "app.js",
  "private": false,
  "repository": "https://github.com/energychain/sales-partner-app",
  "scripts": {
    "coverage": "NODE_ENV=test nyc --reporter=html ava && open coverage/index.html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard | snazzy",
    "precommit": "lint-staged",
    "pretest": "standard | snazzy -s",
    "test": "NODE_ENV=test nyc ava",
    "start": "spike watch",
    "build": "spike compile",
    "format": "prettier-standard '**/*.js'",
    "prod": "NODE_ENV=production spike compile -e production",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "snyk": true
}
